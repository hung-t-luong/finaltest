@model StudentManagement.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="container heading bg-primary mt-5">
        <h4 class="heading-text">DELETE - Are you sure you want to delete this?</h4>
    </div>
    <div>
        <h4>Student</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Gender)
            </dt>
            <dd class="col-sm-10">
                @(Model.Gender ? "Female" : "Male")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </dt>
            <dd class="col-sm-10">
                @(Model.DateOfBirth.ToString("dd-MMM-yyyy"))
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BatchTime)
            </dt>
            <dd class="col-sm-10">
                @(Model.BatchTime.ToString(@"hh\:mm"))
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmailAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmailAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.WebsiteURL)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.WebsiteURL)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
